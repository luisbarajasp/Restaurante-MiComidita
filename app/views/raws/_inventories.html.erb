<ul class="list-group list-group-flush">
    <% if @raw_inventories.length < 1%>
        <li class="list-group-item">No stock</li>
    <% end %>
    <% @raw_inventories.each do |inventory| %>
        <li class="list-group-item">
            <b>Original quantity:</b> <%= pluralize( "%g" % inventory.quantity, @raw.measure ) %> <br>
            <b>Quantity left:</b> <%= pluralize( "%g" % inventory.quantity_left, @raw.measure ) %> <br>
            <b>Expire in:</b> <%= pluralize((inventory.expired_at - Date.today).to_i, 'day') %>              
        </li>
    <% end %>
</ul>