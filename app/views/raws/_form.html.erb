<%= form_with(model: raw, local: true) do |form| %>
  <% if raw.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(raw.errors.count, "error") %> prohibited this raw from being saved:</h2>

      <ul>
      <% raw.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :raw_name, :class => 'form-control', :placeholder => 'Introduce the name'%>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.text_field :type, id: :raw_type, :class => 'form-control', :placeholder => 'Intoduce the type' %>
  </div>

  <div class="field">
    <%= form.label :measure %>
    <%= form.text_field :measure, id: :raw_measure, :class => 'form-control', :placeholder => 'Introduce the measure' %>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.text_field :cost, id: :raw_cost %>
  </div>

  <h2>Inventories</h2>
  <%= form.fields_for :raw_inventories do |inventory| %>
    <div class="raw_inventory_fields">
      <div class="field">
        <%= inventory.label :quantity %><br>
        <%= inventory.number_field :quantity %>
      </div>
      <div class="field">
        <%= inventory.label :expired_at %><br>
        <%= inventory.date_field :expired_at %>
      </div>
    </div>
 <% end %>

  <div class="actions">
    <%= form.submit "Guardar", :class => "btn btn-success" %>
  </div>
<% end %>
